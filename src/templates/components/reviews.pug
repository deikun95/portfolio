script(type="text/x-template")#reviews
  .reviews
    .reviews__header
      .reviews__title.section-title Что обо мне говорят
      .reviews__buttons
        button(type="button" @click="previous()" ref="prevBtn").reviews__btn.reviews__btn_prev
        button(type="button" @click="next()" ref="nextBtn").reviews__btn.reviews__btn_next
    flickity(ref="flickity" :options="flickityOptions").reviews__content
      //- .reviews__content-wrapper(ref="reviews-slider")
      .reviews__content-item(v-for="review in reviews")
        .quote
          .quote__text
            p {{review.text}} 
          .quote__user
            .user-min
              .user-min__avatar
                .user-min__pic-wrapper
                  img(:src="`http://localhost:8000/${review.photo}`").user-min__avatar-pic
              .user-min__info
                .user-min__name {{review.author}}
                .user-min__occ {{review.occ}}