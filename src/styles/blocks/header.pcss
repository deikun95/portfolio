.header {
  display: flex;
  justify-content: space-between;
  align-items: center;

  @include tablets {
    /* align-items: flex-start; */
    width: 61%;
  }
}
.header__menu {
  width: 55%;

  @include tablets {
    display: none;
  }
}
.header__buttons {
  display: block;
  transition: all ease 0.5s;

  @include phones {
    display: none;
  }
}
.active-menu {
  display: none;
}
@media all (max-width: 768px) {
  #menu__toggle {
    opacity: 0;
    &:checked {
      ~ {
        .menu__btn {
          > span {
            transform: rotate(45deg);
            &::before {
              top: 0;
              transform: rotate(0);
            }
            &::after {
              top: 0;
              transform: rotate(90deg);
            }
          }
        }
        .menu__box {
          visibility: visible;
          left: 0;
        }
      }
    }
  }
  .menu__btn {
    display: flex;
    align-items: center;
    position: fixed;
    top: 20px;
    left: 20px;
    width: 26px;
    height: 26px;
    cursor: pointer;
    z-index: 1;
    > span {
      display: block;
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #616161;
      transition-duration: 0.25s;
      &::before {
        display: block;
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: #616161;
        transition-duration: 0.25s;
        content: "";
        top: -8px;
      }
      &::after {
        display: block;
        position: absolute;
        width: 100%;
        height: 2px;
        background-color: #616161;
        transition-duration: 0.25s;
        content: "";
        top: 8px;
      }
    }
  }
  .menu__box {
    display: block;
    position: fixed;
    visibility: hidden;
    top: 0;
    left: -100%;
    width: 300px;
    height: 100%;
    margin: 0;
    padding: 80px 0;
    list-style: none;
    background-color: #eceff1;
    box-shadow: 1px 0px 6px rgba(0, 0, 0, 0.2);
    transition-duration: 0.25s;
  }
  .menu__itema {
    display: block;
    padding: 12px 24px;
    color: #333;
    font-family: "Roboto", sans-serif;
    font-size: 20px;
    font-weight: 600;
    text-decoration: none;
    transition-duration: 0.25s;
    &:hover {
      background-color: #cfd8dc;
    }
  }
}
